                margin-top 7px

//SELECTRIC
.selectric-wrapper
    display inline-block
.selectric
    border 0
    border-bottom 1px solid rgb(225, 226, 229)
    padding-bottom 10px
    width 160px
.selectric-button
    width: 0;
    height: 0;
    margin: 0;
    padding: 0;
    background: none;
    display inline-block
    border 0
    span
        border-left: 7px solid transparent;
        border-right: 7px solid transparent;
        border-top: 8px solid #adb2c0;
        display: inherit;
        transition .4s ease
        transform rotate(0deg)
.selectric-open
    .selectric-button
        span
            transform rotate(180deg)


.selectric-label
    width 145px
    display inline-block
    padding-left 15px
//-----------------------------------

#documentslistfilterdatepicker
    height: 60px;
    border-width: 1px;
    border-color: rgb(221, 224, 234);
    border-style: solid;
    border-radius: 100px;
    padding: 8px 10px;
    opacity 0
    visibility hidden
    transition .4s ease
    margin 0
    input[type='text']
        width 80px
        text-align center
        border 0
    input[type='button']
        width 128px
        height 41px
        text-align center
        border 0
        border-radius: 20px;
        background-color: rgb(42, 139, 242);
        color #fff
        font-size 12px
        font-weight 500
        cursor pointer
        transition .4s ease
        &:hover
            background #1e70c6

.documents__table_header
    width: 100%;
    padding: 15px 20px;
    display: table;
    transition: .6s ease;
    font-size: 15px;
    span
        display: inline-block;
        color: #67708a;
        padding-right: 10px;
        width 17%
        &:nth-child(3)
            width 13%

.documents__item
    height 95px
    display: table;
    width: 100%;
    padding: 15px 20px;
    border-bottom: 1px solid #dde0ea;
    color #181818
    >span
        width 17%
        display: inline-block;
        //color: #67708a;
        padding-right: 10px;
        font-size: 15px;
        vertical-align: top;
    .date_document
        width 13%
    .information_order
        display inline-block
        width 36%
        color: #67708a;
        >div
            margin-bottom 5px
            span
                &:first-child
                    width 65px
                    display inline-block
                    color: #67708a
        >span
            width: 100%;
            display: block;
        a
            color #2a8bf2
            transition .4s ease
            &:hover
                text-decoration underline
.action
    text-align right
    padding-top 24px

    .download_btn
    .print_btn
        display inline-block
        margin-left  20px



.documents__item_hover
    transition: .4s ease;
    &:hover
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 13px 18.8px 1.2px rgba(0,82,165,.18);
        transform: scale(1.01);

.documents__item_btn
    text-align center
    display block
    height 98px
    padding 41px


