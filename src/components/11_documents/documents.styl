.ui-widget-header.month-picker-header.ui-corner-all
    height 55px
    background #2a8bf2
    margin 0
    border 0
    border-bottom-left-radius 0
    border-bottom-right-radius 0
    .month-picker-year-table
        height 100%
.month-picker-year-table
    .month-picker-title
        .ui-button
            font-size 19px
            color #fff
            font-weight 300

a.ui-button.ui-widget.ui-corner-all.ui-button-text-only.ui-state-hover
    background 0 0
    //border 0
    cursor pointer

.ui-widget.ui-state-default.ui-corner-all.ui-button-text-only
    background 0 0
    border 1px solid transparent
    color #181818
    transition .4s ease
    border-radius: 15px;
    &:hover
        border 1px solid #2a8bf2
        border-radius: 15px;

.ui-widget.ui-state-default.ui-corner-all.ui-button-text-only.ui-state-active
    border 1px solid #2a8bf2
    border-radius: 15px;
    background #2a8bf2
    color #fff
    &:hover
        border 1px solid #2a8bf2
        border-radius: 15px;
        background #2a8bf2
        color #fff
.month-picker-month-table
    .ui-button
        width auto

