.indicator
    position absolute
    border-radius: 50%;
    background-color: rgb(255, 0, 0);
    width: 31px;
    height: 31px;
    top: -10px;
    right: 24%;
    opacity 0
    z-index 1
    >span
        position absolute
        left 0
        right 0
        color #fff
        font-size 14px
        text-align center
        line-height 32px
.indicator.new
    opacity 1

