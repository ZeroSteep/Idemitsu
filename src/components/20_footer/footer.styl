footer
    position absolute
    bottom 0
    //width: calc(100% + 160px);
    width 100%
    //z-index 2
    height 30px
    background-color: rgb(255, 255, 255);
    //left -160px
    left 0
.left_block
    float left
    width 60%
    padding 10px 0 8px
    display inline-block
    height 100%
    a
        font-size 14px
        display inline-block
        transition .4s ease
        &:hover
            text-decoration underline

    span
        padding-left 43px
        padding-right 65px
        font-size 14px
        display inline-block
        color #8e99ba


.right_block
    float right
    width 40%
    padding 10px 30px 8px
    display inline-block
    height 100%
    text-align right
    a
        font-size 14px
        display inline-block
        padding-left 20px
        transition .4s ease
        &:hover
            text-decoration underline
            color #2a8bf2



