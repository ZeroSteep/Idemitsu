//---breadcrumb-------
ul.breadcrumb {
    padding: 10px 16px;
    list-style: none;
}
ul.breadcrumb li {
    display: inline;
    font-size: 14px;
    color #b3bad0
}
ul.breadcrumb li+li:before {
    padding: 8px;
    color: black;
    content: "/\00a0";
}
ul.breadcrumb li a {
    text-decoration: none;
    color #2a8bf2
}
ul.breadcrumb li a:hover {
    text-decoration: underline;
}
