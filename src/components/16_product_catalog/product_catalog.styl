                border-right 0
                text-align center
            >a
                float none
                margin-left 0
                width 20px
                height 20px
                opacity 1
                transition: .4s ease;
                display inline-block
            .product_list_add
                background url("../img/14_new_order/img_product_list_transition.png") no-repeat

