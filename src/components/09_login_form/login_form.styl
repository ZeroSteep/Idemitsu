//стили для radio
/*-------------- radio*/

.contract_selection .radio {
        vertical-align: top;
        width: 17px;
        height: 17px;
        margin: 0 3px 0 0;
    }
.contract_selection label {
        font-size 20px
    }
.contract_selection .radio + label {
        cursor: pointer;
    }
.contract_selection .radio:not(checked) {
        position: absolute;
        opacity: 0;
        left -9999px
    }
.contract_selection .radio:not(checked) + label {
        position: relative;
        padding: 0 0 0 35px;
    }
.contract_selection .radio:not(checked) + label:before {
        content: '';
        position: absolute;
        left: 0;
        width: 16px;
        height: 16px;
        border: 2px solid #00000080;
        border-radius: 50%;
    }
.contract_selection .radio:checked + label:before {
        content: '';
        position: absolute;
        left: 0;
        width: 16px;
        height: 16px;
        border: 2px solid rgb(82, 172, 98);
        border-radius: 50%;
    }
.contract_selection .radio:checked + label{
    color rgb(82, 172, 98)
    }
.contract_selection .radio:not(checked) + label:after {
        content: '';
        position: absolute;
        top: 3px;
        left: 4px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgb(82, 172, 98);
        opacity: 0;
        transition: all .2s;
    }
.contract_selection .radio:checked + label:after {
        opacity: 1;
    }

