.recent_actions_table_wrapp
    border-radius: 5px;
    background-color: rgb(255, 255, 255);
    box-shadow: 0 3px 4.7px 0.3px rgba(0, 0, 0, 0.24);
    height: 770px;
    position: relative
    .recent_actions_table__header
        font-size 36px
        display block
        color #2a8bf2
        padding 25px 20px 40px
        //border-bottom 1px solid #dde0ea
        .all_result
            font-size 15px
            width: 140px;
            height: 31px;
            float right
            margin-top 3px
.recent_actions_table_wrapp
    .no_orders
        display none
        position absolute
        bottom 150px
        left 0
        right 0
        margin auto
        text-align center
        font-size 24px
        color #67708a
        padding 20px
        div
            margin 40px 0
        span
            line-height 34px

.recent_actions_table__header__item
    width 100%
    padding 15px 20px
    //height 95px
    display table
    //border-bottom 1px solid #dde0ea
    transition .6s ease
    font-size 13px
    span
        display inline-block
        color: #67708a;
        padding-right 10px
        float left
        &:nth-child(1)
            width 13%
        &:nth-child(2)
            width 13%
        &:nth-child(3)
            width 15%
        &:nth-child(4)
            width 15%
        &:nth-child(5)
            width 44%
.recent_actions__item_hover
    display block
    transition .4s ease
    &:nth-child(3)
        border-top 1px solid #dde0ea
    &:hover
        border-radius: 5px;
        background-color: rgb(255, 255, 255);
        box-shadow: 0 7px 18.8px 1.2px rgba(0, 82, 165, 0.18);
        transform scale(1,1.02)


.recent_actions__item
    display table
    width 100%
    padding 15px 20px
    border-bottom 1px solid #dde0ea
    height 62px
    max-height 62px
    transition .4s ease
    >span
        display inline-block
        color: #181818;
        padding-right 10px
        font-size: 13px;
        vertical-align: middle
        float left
    .date
    .time
        width 13%
    .changed
    .procedure
        width 15%
    .description_actions
        width 44%
        padding 0
        >span
            display block
            width 100%
            padding 0
            span
                padding 0
    .next_step
        width 5px
        height 10px
        background url("../img/08_recent actions_table/next_step.png") no-repeat
        margin 0 10px
        padding 0
        display inline-block

