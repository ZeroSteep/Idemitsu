.notifications_block_wrapper
    display table-cell
    height 100%
    border-left 1px solid #e1e2e5
    padding 0 20px
    vertical-align middle
    text-align center
    width 20%
    min-width 310px
    .notifications__new_wrapp
        width 28px
        height 100%
        display inline-block
        position relative
        transition .8s ease
        text-align center
        .notifications__new
            width 28px
            height 100%
            //background url("../img/03_header/img_notifications.png") center no-repeat
            display inline-block
            position relative
            transition .8s ease
            margin auto
            &:after
                content ''
                position absolute
                width 28px
                height 100%
                display inline-block
                transition .8s ease
                background url("../img/03_header/img_notifications.png") center no-repeat
                left 0
            &:before
                content ''
                position absolute
                width 28px
                height 100%
                display inline-block
                transition .8s ease
                background url("../img/03_header/img_notifications_hover.png") center no-repeat
                left: 0
                opacity 0
            &:hover
                &:after
                     opacity 0
                &:before
                     opacity 1
            .indicator
                position absolute
                border-radius: 50%;
                background-color: rgb(223, 3, 38);
                width: 14px;
                height: 14px;
                top: 37%;
                right: -2%;
                opacity 0
            .indicator.new
                opacity 1
