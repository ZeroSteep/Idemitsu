.header_search
.header_search_new_order
    padding 0 30px
    width 35%
    min-width 105px
    vertical-align middle
    display table-cell
    position relative
    form
        position relative
        .search__new_order
        input.search
            border 0
            border-bottom 1px solid #e1e2e5
            text-indent 40px
            width 100%
            max-width 420px
            placeholder font-size 20px color #8e99ba font-family "Graphik LC" font-weight 300
            height 45px
            text-overflow: ellipsis;
            font-family: "Graphik LC";
            font-weight: 300;
        input.btn_search
            border 0
            background url("../img/03_header/img_search.png") center no-repeat
            width 26px
            height 26px
            position absolute
            left 0
            top 0
            bottom 0
            margin auto
.header__search_result__new_order
.header__search_result
    position absolute
    padding 0 20px 30px
    background #fff
    width: 92%
    border 1px solid rgb(225, 226, 229)
    border-top 1px solid rgb(103, 112, 138)
    box-shadow: 0 13px 18.8px 1.2px rgba(0, 82, 165, 0.18)
    display none
    z-index 99
    min-width 545px
    ul.search_result
    ul.search_result_new_order
        padding 0
        margin 0
        li.search_result_section
            text-transform uppercase
            font-family "Graphik LC"
            font-weight 500
            font-size 15px
            color #67708a
            padding-top 25px
            padding-bottom 15px
        li
            list-style none
            a
                display block
                line-height 2
                color #181818
                span.bold
                    font-family "Graphik LC"
                    font-weight 500

        .all_result
            border 1px solid rgb(142, 153, 186)
            height: 28px
            width 285px
            display: block
            margin: 20px auto 0
            border-radius: 12px
            //padding: 0 25px
            text-align center
            line-height: 28px
            transition .4s ease
            background -moz-linear-gradient( 0deg, rgb(226,92,35) 0%, rgb(223,3,38) 100%);
            background -webkit-linear-gradient( 0deg, rgb(226,92,35) 0%, rgb(223,3,38) 100%);
            background -ms-linear-gradient( 0deg, rgb(226,92,35) 0%, rgb(223,3,38) 100%);
            background -o-linear-gradient( 0deg, rgb(226,92,35) 0%, rgb(223,3,38) 100%);
            background linear-gradient( 0deg, rgb(226,92,35) 0%, rgb(223,3,38) 100%);
            &:hover
                border 1px solid transparent
            span
                padding 1px
                background #fff
                border-radius 11px
                display block
                width 100%
                height 100%
                transition .4s ease
                &:hover
                    color #df0326



